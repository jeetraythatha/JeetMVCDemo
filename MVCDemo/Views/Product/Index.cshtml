@model List<ProductModel>

<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Add">Add Product</a>
</li>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-6">
            <div class="d-md-flex">
                <p class="mx-4">@item.Name</p>
                <p class="mx-4">@item.Description</p>
                <p>@item.Category.Name</p>
            </div>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary" type="button" asp-route-productId="@item.Id" asp-action="Edit">Edit</a>
            <a class="btn btn-danger" type="button"  asp-route-productId="@item.Id" asp-action="Delete">Delete</a>
        </div>
    </div>
}